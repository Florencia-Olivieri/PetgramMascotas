<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/civPerfil"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/fotoperro_jruss"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            app:civ_border_color="#3f51b5"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10dp"
            app:civ_shadow_color="#3f51b5"
            />
        <TextView
            android:id="@+id/tvNombreMascotaPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/civPerfil"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:text="@string/nombre_perfil"
            android:textSize="20sp">

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMascotaFoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvNombreMascotaPerfil"
            android:layout_centerHorizontal="true"
            >

        </androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>



</FrameLayout>